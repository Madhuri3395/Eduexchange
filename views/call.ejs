<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>call constructor</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #F2F0EF; /* replace with your image path */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #333;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 30px #351E10;
            max-width: 500px; /* Adjusted for single option */
            width: 100%;
            height: 50%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            align-items: center;
            align-content:center;
        }
        .container:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 40px #351E10;
        }


        h2 {
            margin-bottom: 40px;
            font-size: 32px;
            color: #351E10;
        }

        .option {
            padding: 10px;
            border: 2px solid #ddd;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
            background: linear-gradient(145deg, #f1f1f1, #e0e0e0);
            box-shadow: 0 5px 15px #351E10;
            max-width: 40%; 
            height: 50%;/* Set a maximum width for the option */
            margin: 0 auto;
            margin-bottom: 1000px;
        }

        .option:hover {
            background-color: black;
            box-shadow: 0px 6px 12px #351E10;
            transform: scale(1.2);
        }

        .option img {
            max-width: 100px;
            margin-top: 30px; /* Increased icon size */
            margin-bottom: 2px;
            transition: transform 0.3s ease;
        }

        p {
            font-size: 24px;
            color: #351E10;
            margin-bottom: 65px;
        }
    </style>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  
    <div class="container">
        <h2>Call Your Constructor</h2>
        <div class="option" onclick="startCall()">
            <img src="/phone.png" alt="User Icon"> <!-- Replace with actual icon -->
        </div>
    </div>
    <script>
        const socket = io();

        function startCall() {
            alert('Connecting to Constructor . Please Wait.......');
            const clientNumber = '+91 ' + '<%= currentUser.phone %>'
            const constructorNumber = '+91 ' + '<%= x.phone %>';
            console.log(clientNumber);
            console.log(constructorNumber);
            socket.emit('startCall', { clientNumber, constructorNumber });
        }
    </script>
</body>
</html>
